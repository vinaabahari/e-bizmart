<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Kategori</title>
    <!-- Bootstrap CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">

     <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <%- include('./layout/navbar') %>
    <div class="container mt-5">
        <div class="row my-4">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered align-middle text-center">
                        <thead class="table-success">
                            <tr class="table-success">
                            <th>Nama Kategori</th>
                            <th>Edit</th>
                            <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                             <% kategori.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td><%= row.nama_kategori %></td>
                                    <td>
                                        <a href="/kategori/edit/<%= row._id %>" class="text-success">
                                            <i class="fa-solid fa-edit fa-lg text-dark"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/kategori/delete/<%= row._id %>" class="text-success">
                                            <i class="fa-solid fa-trash fa-lg text-dark"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="text-end">
                    <a href="/kategori/tambah" class="btn-custom mt-3">+ Tambah Kategori</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
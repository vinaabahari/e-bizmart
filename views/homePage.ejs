<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Barang</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/Style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <%- include('layout/navbar') %>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            <% barang.forEach((barang) => { %>
                <div class="col">
                    <div class="card h-100 shadow-sm d-flex flex-column">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-center">
                                <img src="/img/<%= barang.gambar_barang %>" alt="Foto Barang" width="200">
                            </div>
                            <p class="card-text mb-1"><strong>Nama Produk:</strong> <%= barang.nama_barang %></p>
                            <p class="card-text mb-1"><strong>Harga:</strong> <%= barang.harga_barang %></p>
                            <p class="card-text mb-1"><strong>Keterangan:</strong> <%= barang.keterangan_barang %></p>
                            <p class="card-text mb-1"><strong>Stok:</strong> <%= barang.stok_barang %></p>
                            <p class="card-text mb-1"><strong>Expired:</strong>
                                <%= new Date(barang.exp_barang).toLocaleDateString('id-ID', {
                                    day: '2-digit', month: 'long', year: 'numeric'
                                }) %>
                            </p>
                            <p class="card-text mb-1"><strong>Status:</strong>
                                <%= barang.status_ketersediaan %>
                            </p>

                            <div class="d-flex gap-2 mt-auto">
                                <button
                                    type="button"
                                    class="btn-custom w-100"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalPembayaran<%= barang._id %>"
                                >
                                    Beli
                                </button>
                                
                                <a
                                    href="/keranjang/tambah/<%= barang._id %>"
                                    class="btn-custom-outline w-100 d-flex align-items-center justify-content-center"
                                >
                                    <i class="fas fa-cart-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="modalPembayaran<%= barang._id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <form action="/barang/beli/<%= barang._id %>" method="POST" class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Pilih Metode Pembayaran</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <select class="form-select" name="metode_pembayaran" required>
                                <option value="Cash">Cash</option>
                                <option value="Transfer">Transfer</option>
                                <option value="Kredit">Kredit</option>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Lanjutkan</button>
                        </div>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
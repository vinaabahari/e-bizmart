<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Struk Pembelian</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div style="width: 300px; margin: 0 auto; font-family: monospace;">
        <br>
        <h2 style="text-align: center;">STRUK PEMBELIAN</h2>
        <hr>
        <div>
            <p>Nama Pembeli: <%= penjualan.id_user.nama_user %></p>
            <% detail.forEach((d) => { %>
                <p>Nama Barang: <%= d.id_barang.nama_barang || 'Barang tidak ditemukan' %></p>
                <p>Jumlah: <%= d.jumlah || 'Jumlah tidak ditemukan' %></p>
                <p>Harga Satuan: Rp <%= d.harga_satuan.toLocaleString('id-ID') %> </p>
                <p>Subtotal: Rp <%= d.sub_total.toLocaleString('id-ID') %></p>
            <% }); %>

            <% if (typeof totalHarga !== 'undefined') { %>
                <p>Total: Rp <%= totalHarga.toLocaleString('id-ID') %></p>
            <% } %>

            <p>Metode Pembayaran: <%= penjualan.pembayaran || 'Metode tidak ditemukan' %></p>
            <p>Tanggal: <%= new Date(penjualan.tanggal).toLocaleDateString('id-ID', {
                day: '2-digit',
                month: 'long',
                year: 'numeric'
            }) %></p>
            <p>Status: <%= penjualan.status_transaksi %></p>
        </div>
        <hr>
        <p style="text-align: center;">--- Terima Kasih ---</p>
        <div class="d-flex gap-2">
            <% if (typeof totalHarga !== 'undefined') { %>
                <a href="/keranjang/clear" class="btn btn-outline-success w-100">
                    kembali
                </a>
                <a href="/keranjang/cetak-struk/<%= penjualan._id %>" class="btn btn-outline-success w-100">
                    cetak
                </a>
            <% } else { %>
                <a href="/barang/transaksi" class="btn btn-outline-success w-100">
                    kembali
                </a>
                <a href="/barang/cetak-struk/<%= penjualan._id %>" class="btn btn-outline-success w-100">
                    cetak
                </a>
            <% } %>
        </div>
    </div>
</body>
</html>